= form_for [current_user, appointment] do |f|
  = f.label :name
  = f.text_field :name
  = f.label :location
  = f.text_field :location
  = f.label :date
  = f.text_field :date, type: 'date'
  = f.label :start_time
  = f.text_field :start_time, type: 'time',            |
    value: appointment.start_time.strftime('%H:%M:%S') |
  = f.label :end_time
  = f.text_field :end_time, type: 'time',              |
    value: appointment.end_time.strftime('%H:%M:%S')   |
  %br
  = f.submit yield(:submit), class: 'btn btn-large btn-primary'
